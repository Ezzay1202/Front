.m {
  flex: 1 0;
  width: 85%;
  align-items: stretch;
  padding: 1em;
  background-color: rgb(236, 242, 254);
  margin: .5em 5%;
  border-radius: 5%;
  display: flex;
  flex-direction: column;
}

.m .title {
  flex: 1;
  font-size: 35rpx;
  max-height: 3em;
  margin-bottom: .5em;
  overflow: scroll;
}

.m .text {
  float: left;
  margin: .2em;
  max-height: 3em;
  overflow: scroll;
}

.m .text text {
  float: inline-start;
  font-size: 26rpx;
  margin: .3em .8em .3em 0;
  padding: .5em;
  color: white;
  background-color: #13a4a4;
  border-radius: .5em;
}

.none {
  position: fixed;
  width: 100%;
  bottom: 40vh;
  display: flex;
  flex-direction: column;
}

.none>image {
  height: 20vh;
  width: 20vh;
  align-items: center;
  margin: 0 auto;
}

.none>view {
  flex: 1;
  font-size: 28rpx;
  color: #888;
  text-align: center;
}

.m-ing {
  background-color: white;
  width: 650rpx;
  padding: 1em;
  /* border: 4rpx solid #135ba4; */
  box-shadow: 1rpx 1rpx 5rpx 2rpx #dfdfeb;
  margin: 15rpx 1rpx;
  display: flex;
  flex-direction: column;
}

.n-ing {
  margin: .3em;
  padding: .2em;
  border-top: 1px dashed black;
}

.t-class-content {
  margin-top: .2em !important;
  max-height: 1.3em;
  overflow: scroll;
}

.t-class-title {
  font-size: 22rpx !important;
  font-weight: 100;
}