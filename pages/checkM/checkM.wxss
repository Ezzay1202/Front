page {
  background-color: #f3f3f5;
  --tag-color: #a4a413;
}

.m {
  flex: 1;
  width: 85%;
  align-items: stretch;
  padding: 1em;
  margin: .5em 5%;
  border-radius: 3%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: 4rpx outset #021a40;
  box-shadow: 5px 5px #dfdfeb;
}

.m_back {
  border-color: #c61d3c;
}

.m .title {
  flex: 1;
  font-size: 35rpx;
  max-height: 3em;
  margin-bottom: .5em;
  overflow: scroll;
}

.title_back {
  color: #c61d3c
}

.m .text {
  margin: .2em;
  max-height: 3em;
  overflow: scroll;
  display: flex;
}

.m .text text {
  text-align: center;
  font-size: 26rpx;
  margin: .3em .8em .3em 0;
  padding: .5em;
  color: white;
  background-color: #307090;
  border-radius: .3em;
}

.detail-people {
  border: 4rpx dashed#c61d3c;
  padding: .6rem 5%;
  display: flex;
  flex-direction: column;
}

.detail-people>text {

  font-size: 33rpx;
  font-weight: 500;
  margin: 0em 0 .5em;
}

.detail-box {
  height: 4em;
  width: 100%;
  border-left: 3px solid var(--tag-color);
  box-shadow: 5rpx 5rpx #efefef;
}

.detail-box text {
  padding: 1em;
}
