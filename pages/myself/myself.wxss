/* pages/myself/meself.wxss */
page {
  width: 100%;
  overflow: scroll;
  background-color: rgb(245, 245, 245);
}
.flex{
  position: relative;
  top:560rpx;
  display: flex;
  flex-direction: column;
}
.container {
  width: 100%;
  z-index: -2;
  box-sizing: border-box;
}

/* 第1部分 */
.top-container {
  width:100%;
  height: 440rpx;
  position:absolute;
  display: flex;
  flex-direction: column;
  background-color: rgba(106, 99, 166, 0.5);
}
.t-class{
  font-size: 20rpx;
  font-weight: 100;
}
.t-class-title{
  font-size: 20rpx;
  font-weight: 100;
}

.bg-img {
  position: absolute;
  width: 100%;
  height: 440rpx;
  z-index: -2;
}

.head{
  position: absolute;
  top:130rpx;
  left: 30rpx;
  display: flex;
  flex-direction: column;
}
.head  >image{
  height:150rpx;
  width:150rpx;
  border-radius: 50%;
  border:5rpx solid white;
  z-index: 1;
}
.head >text{
  margin: .3em ;
  text-align: center; 
  font-size: 35rpx;
  color:white;
}

/* 第2部分--打车，门票，酒店，更多  begin*/
.middle-container {
  position: absolute;
  top:450rpx;
  height: 200rpx;
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  border-radius: 20rpx;
  background-color: #FFFFFF;
  margin: -80rpx 30rpx 26rpx 30rpx;
  box-shadow: 0 15rpx 10rpx -15rpx #efefef;
  z-index: 3;
}

.view_2 {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.view_tupianwenzi {
  display: flex;
  flex-direction: column;
  width: 130rpx;
  align-items: center;
  margin-left: 25rpx;
  margin-right: 25rpx;
}

.image_tupian {
  display: flex;
  padding: 1em 1em .8em;
  width: 60rpx;
  height: 60rpx;
}

.text_1 {
  font-size: 27rpx;
}
.text{
  font-size: 35rpx;
  font-weight: bold;
  margin-bottom: .3em;
}
.myM{
 
  display:flex;
  flex-direction: column;
  background-color: #FFFFFF;
  margin: 40rpx 30rpx 26rpx 30rpx;
  box-shadow: 0 15rpx 10rpx -15rpx #efefef;
  padding: 1em;
  border-radius: 5%;
}
.myM-ing{
  padding: 1em;
}
.myM-history{
  padding: .5em;
  max-height: 330rpx;
  overflow:scroll;
}
.m{
  width: 85%;
  align-items: stretch;
  padding: 1em;
  border:.1em solid rgb(236,242,254);
  background-color: #ecfbfe;
  margin: .5em ;
  border-radius:10%;
  display:flex;
  flex-direction: column;
}
.m .title{
  flex:1;
  font-size: 30rpx;
  max-height:3em;
  margin-bottom: .5em;
  overflow:scroll;
}
.m .text{
  float: left;
  margin: .2em;
  max-height: 3em;
  overflow: scroll;
  border-bottom: 1px dashed #009999;
}
.m .text >text{
  color: white;
  background-color: #13a4a4;
  border-radius: .5em;
}
 .m text{
  float:inline-start;
  font-size: 20rpx;
  margin: .3em .8em .3em 0;
  padding: .5em;
} 
.text button{
  margin: .3em .8em .3em 0;
  font-size: 20rpx;
  color: white;
  background-color: #135ba4;
  border-radius: .5em;
}
.m .people{
  flex:1;
  float:left;
  margin: .2em;
  display: flex;
  max-height: 3rem;
  max-width: 80%;
  align-items:center;
  overflow:scroll;
}
.m .people >text{
  min-width: max-content;
  margin-right: .5em;
  text-align: center;
  flex:1;
  padding: .4em;
  font-size:20rpx;
  color:var(--people-color);
  border:1rpx solid var(--people-color);
  border-radius: .5em;
}
.m .people >text[data-id="1"]{
  --people-color:#13a45b
}
.m .people >text[data-id="2"]{
  --people-color:#135ba4
}
.m .people >text[data-id="4"]{
  --people-color:#a4a413
}
.m .people >text[data-id="5"]{
  --people-color:#a413a4
}

.m .n{
  display: flex;
  box-sizing: border-box;
}
.score{
  box-sizing: border-box;
  width:20%;
  font-size:30rpx;
  padding: .3rem .3rem 0;
  color:#a63f53;
}
.time-view{
  background-color: white;
  margin: 20rpx 30rpx 26rpx 30rpx;
  box-shadow: 0 15rpx 10rpx -15rpx #efefef;
  padding: 1em;
  border-radius: 5%;
}
.myday{
  margin: .5em;
  max-height: 400rpx;
  overflow: scroll;
  display:flex;
  flex-direction: column;
}
.mywork{
  height:120rpx;
  padding: .3em;
  margin:.5em;
  border-left:6rpx outset #009999;
  display: flex;
  flex-direction: column;
  box-shadow: 10rpx 10rpx 10rpx -15rpx #009999;
}
.mywork>text{
  flex: 1;
  font-size: 21rpx;
  margin-left:15rpx ;
  color: black ;
}



