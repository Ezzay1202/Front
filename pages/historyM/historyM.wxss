/* pages/historyM/historyM.wxss */
page {
  --people-color: #13a4a4;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}

.btn2 {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: rgba(0, 0, 0, .6);
}

.btn--confirm {
  color: #0052d9;
}

t-search {
  width: 90%;
  background-color: #feecf2;
}

.m {
  flex: 1 0;
  width: 85%;
  align-items: stretch;
  padding: 1em;
  background-color: #fff;
  border: 4rpx outset #021a40;
  box-shadow: 0 1px 5px #021a40;
  margin: .5em 5%;
  display: flex;
  flex-direction: column;
}

.m .title {
  flex: 1;
  font-size: 35rpx;
  max-height: 3em;
  margin-bottom: .5em;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.m .text {
  display: flex;
  flex-wrap: wrap;
  margin: .2em;
  max-height: 6em;
  border-bottom: 1px dashed #009999;
}

.m .text>text {
  color: white;
  background-color: #13a4a4;
  border-radius: .5em;
}

text {
  float: inline-start;
  font-size: 26rpx;
  margin: .3em .8em .3em 0;
  padding: .5em;
}

.text button {
  margin: .3em .8em .3em 0;
  font-size: 26rpx;
  color: white;
  background-color: #135ba4;
  border-radius: .5em;
}

.m .people {
  flex: 1;
  float: left;
  margin: .2em;
  display: flex;
  max-height: 4rem;
  align-items: center;
  overflow-x: scroll;
}

.m .people>text {
  min-width: max-content;
  margin-right: .5em;
  text-align: center;
  flex: 1;
  padding: .4em;
  font-size: 25rpx;
  color: var(--people-color);
  border: 1rpx solid var(--people-color);
  border-radius: .5em;
}

.m .people>text[data-id="1"] {
  --people-color: #13a45b
}

.m .people>text[data-id="2"] {
  --people-color: #135ba4
}

.m .people>text[data-id="4"] {
  --people-color: #a4a413
}

.m .people>text[data-id="5"] {
  --people-color: #a413a4
}

.m .n {
  display: flex;
  box-sizing: border-box;
}

.score {
  box-sizing: border-box;
  width: 20%;
  font-size: 35rpx;
  padding: .5rem .3rem 0;
  color: #a63f53;
}

image {
  z-index: 1;
  position: absolute;
  bottom: 4rem;
  height: 4rem;
  width: 4rem;
}

page {
  background-color: #fff;
}

page .round-image {
  border-radius: 12rpx;
}

.t-sidebar-content {
  padding: .2em .5em .2em 0 !important;
}

.t-sidebar {
  margin: .1em 0;
}

.t-sidebar-text {
  background-color: #efefef;
  border-radius: 5%;
  margin-bottom: .1em;
  padding: 15rpx 0 !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.t-sidebar-text {
  background-color: #efefef;
  border-radius: 5%;
  margin-bottom: .1em;
  padding: 15rpx 0 !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.t-sidebar-text-checked {
  background-color: #ecf1fe;
  border-radius: 5%;
  margin-bottom: .1em;
  padding: 15rpx 0 !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.side-bar-wrapper {
  display: flex;
  height: 60vh;
  overflow: hidden;
}

.side-bar-wrapper .t-side-bar-item {
  font-size: 32rpx;
}

.side-bar-wrapper scroll-view {
  height: 55vh;
}

.side-bar-wrapper .content {
  flex: 1;
  padding: 0 10rpx;
}

.side-bar-wrapper .section {
  padding: 32rpx 0;
}

.side-bar-wrapper .title {
  padding-left: 40rpx;
  margin-bottom: 8rpx;
  line-height: 52rpx;
}

.side-bar-wrapper .image {
  width: 96rpx;
  height: 96rpx;
}