<!--pages/home/home.wxml-->
<t-tab-bar value="{{value}}" bindchange="onChange" theme="tag" split="{{false}}">
  <t-tab-bar-item wx:for="{{list}}" wx:key="index" value="{{item.value}}" icon="{{item.icon}}" bindtap="onChange">
    {{item.label}}
  </t-tab-bar-item>
</t-tab-bar>

<t-search model:value="{{value_s}}" label="1" placeholder="搜索" center="{{true}}" />

<t-swiper
  current="{{current}}"
  duration="{{duration}}"
  interval="{{interval}}"
  navigation
>
  <t-swiper-item wx:for="{{swiperList}}" wx:key="index">
    <image src="{{item.image}}" class="img" />
  </t-swiper-item>
</t-swiper>

<t-grid class="block" column="{{4}}" theme="card">
  <t-grid-item text="优秀作品" image="{{img}}" bindtap="goTomoudle1" />
  <t-grid-item text="待接任务" image="{{img}}" bindtap="goTomoudle2"/>
  <t-grid-item text="查询稿件" image="{{img}}" />
  <t-grid-item text="任务联动" image="{{img}}" />
</t-grid>

