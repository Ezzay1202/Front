/* pages/fcheckM/fcheckM.wxss */
page {
  width: 100%;
  height: 100%;
  --td-cell-bg-color: #f0ecfe;
  --bu-color: #0b1f51;
}

.m {
  flex: 1;
  width: 85%;
  align-items: stretch;
  padding: 1em;
  margin: .5em 5%;
  border-radius: 3%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: 4rpx outset #021a40;
  box-shadow: 5px 5px #dfdfeb;
}

.m .title {
  flex: 1;
  font-size: 35rpx;
  height: 3.2em;
  margin-bottom: .5em;
  overflow: scroll;
}

.m .text {
  margin: .2em;
  max-height: 3em;
  overflow: scroll;
  display: flex;
}

.m .text text {
  text-align: center;
  font-size: 26rpx;
  margin: .3em .8em .3em 0;
  padding: .5em;
  color: white;
  background-color: #307090;
  border-radius: .5em;
}

.service {
  flex: 3;
  margin: .6em 5%;
  display: flex;
  border: 2rpx solid black;
  box-shadow: 0 1px 5px 0 #efefef;
  box-sizing: border-box;
  padding: 1em;
  flex-direction: column;
  border-radius: 5%;
}

.score {
  flex: 2;
  margin: .5em;
}

.star {
  flex: 1;
  text-align: center;
  margin: 0 .2em;
}

.star image {
  width: 2.2em;
  height: 2.3em;
}

.score .word {
  text-align: center;
  font-size: 28rpx;
  color: lightgrey
}

.score .right {
  display: flex;
  margin: .5em 15%;
}

.labelColor {
  color: #13a4a4;
  border: 1px solid #13a4a4 !important;
}

.content {
  padding: 0 1em;
  flex: 2;
  margin: .5em;
  box-sizing: border-box;
  width: 610rpx;
  font-size: 24rpx;
  display: flex;
  color: #888;
}

/* .content .left {
  text-align: center;
  font-size: 28rpx;
  color: lightgrey
} */

.content .right {
  flex: 1;
  margin-top: 6rpx;
  margin-left: 10rpx;
}

.right text {
  font-size: 34rpx;
}

