.conts {
  flex: 3;
  margin: .6rem 5% 0;
  border-radius: 5%;
  display: flex;
}

textarea {
  padding: 1em;
  display: block;
  color: rgba(0, 0, 0, 0.9);
  font-size: 24rpx;
  line-height: 20rpx;
  height: 220rpx;
  padding-bottom: 16rpx;
}

.areas {
  flex: 1;
  background-color: rgb(245, 245, 245);
  margin: 1em 3%;
  font-size: 30rpx;
  overflow: scroll;
  border: 1px solid #13a4a4 !important;
  box-shadow: 0 0rpx 10rpx 0 #13a4a4;
}

.currentWordNumber {
  font-size: 28rpx;
  position: absolute;
  left: 0%;
  bottom: 0rpx;
  color: #c00;
}

.hint {
  font-size: 28rpx;
  position: absolute;
  top: 120rpx;
  left: 30rpx;
  color: #FF6600;
}

.filebox {
  flex: 2;
  margin: .5rem;
  display: flex;
  border-radius: 5%;
  box-sizing: border-box;
  flex-direction: column;
}

.filebox .right {
  margin-top: .5em;
  font-size: 24rpx;
  display: flex;
  color: black;
}

.filebox .right .n {
  flex: 1;
  background-color: white;
  box-shadow: 0 1rpx 5rpx 0rpx #13a4a4;
  /* border: 2px outset #13a4a4; */
  margin-left: .5em;
  display: grid;
  grid-template-columns: 1fr 4fr;
  grid-template-rows: 2fr 1fr;
  max-height: 100rpx;
  overflow: hidden;
}

.filebox .right .n text {
  padding: .2em;
  margin: .2em;
  border: 0px solid #888;
  width: 12em;
}

.filebox .right .n .name {
  grid-column: 2/3;
  grid-row: 1/2;
  font-size: 30rpx;
  max-height: 3em;
  overflow: scroll;
}

.filebox .right .n .size {
  grid-column: 2/3;
  grid-row: 2/3;
  font-size: 20rpx;
  color: #888888;
}

.filebox .right .n>image {
  grid-column: 1/2;
  grid-row: 1/3;
  margin-top: 1em;
  margin-left: .5em;
  max-width: 3em;
  max-height: 3em;
}

.filebox .right>image {
  width: 3em;
  height: 3em;
  align-self: center;
  text-align: center;
  border-radius: 10rpx;
  margin: .2em;
}

.filebox button {
  flex: 3;
  margin: .5em;
  font-size: 26rpx;
  background-color: rgb(236, 242, 254);
  color: #13a4a4;
  border: 1px solid #13a4a4 !important;
}

.people_box {
  flex: 1;
  margin: .5rem 0 0;
  display: flex;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.people_item {
  margin: 0 .3rem .3rem 0;
  padding: .5em;
  background-color: white;
  display: grid;
  grid-template-columns: 1fr 2fr;
  grid-template-rows: 2fr 1fr;
  max-height: 3em;
  border-radius: 15%;
  box-shadow: 0 1rpx 5rpx 0 #888;
}

.people_item>image {
  grid-column: 1/2;
  grid-row: 1/3;
  max-width: 3em;
  max-height: 3em;
  border-radius: 50%;
}

.people_item>text {
  padding: .2em;
  margin: 0 .2em;
  border: 0px solid #888;
}

.people_item .name {
  grid-column: 2/3;
  grid-row: 1/2;
  font-size: 27rpx;
  overflow: hidden;
}

.people_item .job {
  grid-column: 2/3;
  grid-row: 2/3;
  font-size: 20rpx;
  color: #888888;
}

.btn button {
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  bottom: 37rpx;
}

.btn_lan {
  margin: 0 2rem;
  font-size: 25rpx !important;
  flex: 0;
  bottom: 0rpx !important;
  color: #13a4a4;
  border: 1px solid #13a4a4 !important;
}

.btn_back {
  margin-top: 1em;
  color: #13a4a4;
  border: 1px solid #13a4a4 !important;
}

button:after {
  border: 0;
}

.btn_go {
  margin-top: 2em;
  background-color: #13a4a4;
  color: white;
}

.pannel-item {
  display: flex;
  align-items: center;
  height: 96rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  margin: 0 .5em;
  margin-bottom: -13rpx;
  background-color: var(--td-cell-bg-color);
}

.pannel-item .last {
  margin-bottom: -13rpx;
}

.pannel-label {
  width: 160rpx;
  margin-right: 32rpx;
}

.pannel-text {
  flex: 1;
  color: rgb(0, 0, 0);
  opacity: 0.9;
  color: #0c0903;
}

.pannel-text.empty {
  opacity: 0.26;
}

.demo-textarea {
  padding: 32rpx;
  background-color: rgb(236, 242, 254);
}

.pM {
  margin: .5em 5%;
  border-radius: 3%;
  background-color: var(--td-cell-bg-color);
}

.mask-bac {
  z-index: 11;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal {
  width: 600rpx;
  height: 550rpx;
  border-radius: 20rpx;
  position: fixed;
  z-index: 11;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #aef4e0;
  box-sizing: border-box;
  padding: 1em;
  color: #7e7a7a;
  font-size: 27rpx;
  line-height: 40rpx;
}

.modal .input-box {
  margin-top: 50rpx;
  margin-left: 11rpx;
  padding: .3em;
  position: absolute;
  display: flex;
  flex-direction: column;
}

.input-box>text {
  color: black;
  font-size: 32rpx;
  margin-left: 6rpx;
  margin-bottom: 35rpx;
}

.inputcs {
  background-color: #e5f4ae;
  margin-bottom: .8em;
  color: black;
  width: 470rpx;
  font-size: 30rpx;
  padding: .5em;
  border: 6rpx outset #0f0c0d;
}

.passwordcs {
  width: 450rpx;
  font-size: 30rpx;
  padding: .5em;
  border: 6rpx outset #0f0c0d;
}

.pannel-item {
  display: flex;
  align-items: center;
  border: 6rpx outset;

}

.pannel-item-other {
  margin: 0 1em;
  margin-bottom: -13rpx;
  background-color: #f0ecfe;
  border-radius: 5%;
}

.pannel-item .last {
  margin-bottom: -13rpx;
}

.pannel-label {
  width: 160rpx;
  margin-right: 32rpx;
}

.pannel-text {
  flex: 1;
  color: rgb(0, 0, 0);
  opacity: 0.9;
}

.pannel-text.empty {
  opacity: 0.26;
}

.modal .mbutton-box {
  position: absolute;
  bottom: 50rpx;
  width: 540rpx;
  margin: .5em 0;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.mbutton-box>button {
  flex: 1;
  font-size: 29rpx;
  margin: 0 10rpx .5em;
  padding: 0;
  color: var(--bu-color);
  background-color: #aef4e0;
  border: 1px solid var(--bu-color) !important;
  border-radius: 2%;
}

.modal.noShow {
  top: -0%;
  opacity: 0;
  transition: all 1s;
}

.modal.show {
  top: 50%;
  transition: all 1s;
  opacity: 1;
}

.pop_box {
  padding: 1.5em 0;
  display: flex;
  flex-direction: column;
  overflow: scroll;
}

.pop_item {
  padding: .5em 1.5em;
  margin: .2em 0 0;
  box-shadow: 0 0 5rpx 0 #efefef;
  border-bottom: 1rpx solid #efefef;
}

.pop_item text {
  font-size: 30rpx;
}