page {
  background-color: #f3f3f5;
  --tag-color: #a4a413;
}

.m {
  flex: 1;
  width: 85%;
  align-items: stretch;
  padding: 1em;
  margin: .5em 5%;
  border-radius: 3%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: 4rpx outset #021a40;
  box-shadow: 5px 5px #dfdfeb;
}

.m .title {
  flex: 1;
  font-size: 35rpx;
  max-height: 3em;
  margin-bottom: .5em;
  overflow: scroll;
}

.m .text {
  margin: .2em;
  max-height: 3em;
  overflow: scroll;
  display: flex;
}

.m .text text {
  text-align: center;
  font-size: 26rpx;
  margin: .3em .8em .3em 0;
  padding: .5em;
  color: white;
  background-color: #307090;
  border-radius: .3em;
}

.m .n {
  display: flex;
  align-items: center;
  margin-top: 0;
  box-sizing: border-box;
}

.tagbox {
  max-width: 200rpx;
  max-height: 100rpx;
  overflow: scroll;
}

.tagbox view {
  color: var(--tag-color);
  border: .1em solid var(--tag-color);
  text-align: center;
  font: 1.1em sans-serif;
  box-sizing: border-box;
  margin: .5em .3em;
  padding: .5em;
  border-radius: 10rpx;
}

.n .buttonbox {
  flex: 1;
  display: flex;
}

.buttonbox button {
  flex: 1;
  font-size: 30rpx;
  color: white;
  border-radius: 10rpx;
  background-color: #629460;
  border: 1px solid;
  margin: .3em .3em .2em;
}

.tag-p {
  margin: .2em;
  overflow: scroll;
  display: flex;
  justify-items: center;
  align-items: center;
  box-sizing: border-box;
}

.tag-p text {
  text-align: center;
  font-size: 26rpx;
  margin: .3em .8em .3em 0;
  padding: .5em;
  color: var(--tag-color);
  border: 1px solid var(--tag-color);
  border-radius: .5em;
}

.tag-p button {
  flex: 1;
  margin: .3em .8em .3em 0;
  font-size: 27rpx;
  padding: .2em;
  color: white;
  background-color: #307090;
}

.detail {
  max-height: 600rpx;
  border: 2px dashed #307090;
  background-color: rgb(250, 250, 250);
  display: flex;
  flex-direction: column;
  overflow: scroll;
}

.filebox {
  margin: .6rem 5%;
  display: flex;
  border-radius: 5%;
  box-sizing: border-box;
  flex-direction: column;
}

.filebox .right {
  flex: 2;
  margin-top: .5em;
  font-size: 24rpx;
  display: flex;
  color: black;
}

.filebox .right .w {
  flex: 1;
  background-color: white;
  border: 2px outset #13a4a4;
  margin-left: .5em;
  display: grid;
  grid-template-columns: 1fr 4fr;
  grid-template-rows: 2fr 1fr;
  max-height: 100rpx;
  overflow: hidden;
}

.filebox .right .w text {
  padding: .2em;
  margin: .2em;
  border: 0px solid #888;
  width: 12em;
}

.filebox .right .w .name {
  grid-column: 2/3;
  grid-row: 1/2;
  font-size: 30rpx;
  max-height: 3em;
  overflow: scroll;
}

.filebox .right .w .size {
  grid-column: 2/3;
  grid-row: 2/3;
  font-size: 20rpx;
  color: #888888;
}

.filebox .right .w>image {
  grid-column: 1/2;
  grid-row: 1/3;
  margin-top: .7em;
  margin-left: .5em;
  max-width: 3em;
  max-height: 3em;
}

.filebox .right>image {
  width: 3em;
  height: 3em;
  align-self: center;
  text-align: center;
  border-radius: 10rpx;
  margin: .2em;
}

.detail-tag {
  margin: 0rem 5% .6rem;
  overflow: visible;
}

.detail-tag text {
  margin-right: .5em;
  padding: .3em .5em;
  --tag-color: #0e6ebc;
}

.detail-people {
  margin: 0rem 5% .6rem;
  display: flex;
  flex-direction: column;
}

.detail-people>text {

  font-size: 33rpx;
  font-weight: 500;
  margin: 0em 0 .5em;
}

.detail-box {
  height: 4em;
  width: 100%;
  border-left: 3px solid var(--tag-color);
  box-shadow: 5rpx 5rpx #efefef;
}

.detail-box text {
  padding: 1em;
}

.none>image {
  height: 20vh;
  width: 20vh;
  align-items: center;
  margin: 0 auto;
}

.none>view {
  flex: 1;
  font-size: 28rpx;
  color: #888;
  text-align: center;
}