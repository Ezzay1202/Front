<!--pages/myinformation/myinformation.wxml-->
<view class="background">
  <view class="box grid" bindtap="changePhoto">
    <image src="/image/啸天.png"></image>
    <text>头像</text>
  </view>
  <view style="grid-column:4/5;  grid-row:1/2; background-color:{{man? '#2b808d': '#f9c5ca'}};" class="box" bindtap="changeName">
   <view class="set"> 
    <image  src="{{man? '/image/kx.png' : '/image/sx.png'}}"></image>
   </view> 
   <text>性别</text>
  </view>
  <view style="grid-column:1/3;  grid-row:6/7; " class="box" bindtap="changeName">
    <image src="https://s3.bmp.ovh/imgs/2023/01/10/5032ffa435b9888b.png"></image>
  </view>
  <block wx:for="{{info}}" wx:key="index">
    <view style="grid-column:{{item.column}};  grid-row:{{item.row}}; background-color:{{item.color}};" class="box" bindtap="{{item.f}}" data-index="{{index}}">
    <view style="width: 100%; height: 100%; padding-top: .2em;">
      <text class="bigtext{{item.class}}">{{item.btext}}</text>
    </view>
    <text>{{item.stext}}</text>
  </view>
  </block>
</view>

<view class="mask" hidden="{{!showName}}">
  <view class="mask-bac">
  <view class="modal flex-column j_c {{showName ? 'show':'noShow'}}" style="background: {{current.color}};">
  <view class="input-box">
    <text>设置新的{{info[index].stext}}</text>
    <input placeholder="{{info[index].btext}}" 	placeholder-class="p-class" type="text" bindinput="content" class="inputcs" />
  </view>
  <view class="mbutton-box">
    <button bindtap="cancelMask">取消</button>    
    <button style="background-color: var(--bu-color); color:white" bindtap="kcbSpider">确认</button>   
 </view>
 </view>
</view>
    </view>


