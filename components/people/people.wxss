/* components/people.wxss */
.block2 {
  width: 100vw;
  background: #fff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.wrapper {
  margin: 32rpx;
  display: block;
}

.header {
  display: flex;
  align-items: center;
  height: 116rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-weight: 600;
  font-size: 36rpx;
}

.btn2 {
  font-size: 32rpx;
  padding: 32rpx;
}

.btn--cancel {
  color: rgba(0, 0, 0, .6);
}

.btn--confirm {
  color: #0052d9;
}

.t-grid {
  position: relative;
  overflow: hidden;
  background-color: var(--td-grid-bg-color, #fff);
}

.t-grid-item {
  box-sizing: border-box;
  height: 100%;
  display: inline-block;
  vertical-align: top;
}

.t-grid-item__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
  position: relative;
  padding: 32rpx 0 24rpx;
}

.t-grid-item__words {
  width: 100%;
  text-align: center;
  position: relative;
  flex-direction: column;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.t-grid-item__text {
  width: inherit;
  color: var (--td-grid-item-text-color, rgba(0, 0, 0, 0.9));
  font-size: 28rpx;
  line-height: 44rpx;
  padding-top: 16rpx;
}

.t-sidebar-content {
  padding: .2em .5em .2em 0 !important;
}

.t-sidebar {
  margin: .1em 0;
}

.t-sidebar-text {
  background-color: #efefef;
  border-radius: 5%;
  margin-bottom: .1em;
  padding: 15rpx 0 !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.t-sidebar-text-checked {
  background-color: #ecf1fe;
  border-radius: 5%;
  margin-bottom: .1em;
  padding: 15rpx 0 !important;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.side-bar-wrapper {
  background-color: #fff;
  display: flex;
  height: 60vh;
  overflow: hidden;
}

.side-bar-wrapper .t-side-bar-item {
  font-size: 32rpx;
}

.side-bar-wrapper scroll-view {
  height: 55vh;
}

.side-bar-wrapper .content {
  flex: 1;
  padding: 0 10rpx;
  padding-bottom: 5vh;
}

.side-bar-wrapper .section {
  padding: 32rpx 0;
}

.side-bar-wrapper .title2 {
  padding-left: 31rpx;
  margin-bottom: 15rpx;
  line-height: 52rpx;
  font-size: 33rpx;
  font-weight: 800;
}

.side-bar-wrapper .image {
  width: 96rpx;
  height: 96rpx;
}